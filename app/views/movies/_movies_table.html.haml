%table.table.table-striped
  %tbody
    - movies.each_with_index do |movie, i|
      %tr
        %td= i + 1
        %td.image-table
          %img.img-rounded{ src: movie.avatar, width: 100 }
        %td
          %h4
            = link_to movie.title, movie_path(movie)
            -# = movie.rating_star
            %span.fs12= movie.rating
          %p
            %strong
              = link_to movie.genre.name, movies_genre_path(movie.genre)
            = ' (' + movie.released_at.to_s(:db) + ')'
          %p= movie.description
